<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Faça seu login aqui</p>
            <%- include('includes/messages'); %>
            <div class="row">
                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>
                    <p>Se você ainda não tem conta, preencha o formulário abaixo</p>
                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                            <label class="form-label">Seu email</label>
                            <input type="email" class="form-control" aria-describedby="emailHelp" name="email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>  
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                    </form>
                </div>
                <div class="col-lg">
                    <h4>Faça seu login</h4>
                    <p>Se você já tem uma conta, preencha os dados abaixo</p>
                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                            <label class="form-label">Seu email</label>
                            <input type="email" class="form-control" aria-describedby="emailHelp" name="email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>  
                        <button type="submit" class="btn btn-primary">Logar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>